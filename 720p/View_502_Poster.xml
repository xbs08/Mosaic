<includes>
	<include name="View_502_Poster">
		<description>Poster View (id=502)</description>
		<control type="wraplist" id="502">
			<visible>Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Window.IsVisible(Programs)</visible>
			<posx>-124</posx>
			<posy>140</posy>
			<width>1526</width>
			<height>310</height>
			<onleft>502</onleft>
			<onright>502</onright>
			<onup>9000</onup>
			<ondown>62</ondown>
			<pagecontrol>62</pagecontrol>
			<scrolltime>200</scrolltime>
			<focusposition>3</focusposition>
			<orientation>horizontal</orientation>
			<preloaditems>2</preloaditems>
			<viewtype label="31201">bigicon</viewtype>
			<itemlayout width="218" height="310">
				<control type="image">
					<posx>2</posx>
					<posy>0</posy>
					<width>214</width>
					<height>310</height>
					<texture border="5">other_textures/ButtonNF.png</texture>
				</control>
				<control type="image">
					<posx>7</posx>
					<posy>5</posy>
					<width>204</width>
					<height>300</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="DefaultAddonNone.png" background="true">$INFO[ListItem.Icon]</texture>
					<bordersize>2</bordersize>
				</control>
			</itemlayout>
			<focusedlayout width="218" height="310">
				<control type="image">
					<posx>2</posx>
					<posy>0</posy>
					<width>214</width>
					<height>310</height>
					<texture border="5">other_textures/ButtonFo.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(502)">Conditional</animation>
				</control>
				<control type="image">
					<posx>7</posx>
					<posy>5</posy>
					<width>204</width>
					<height>300</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="DefaultAddonNone.png" background="true">$INFO[ListItem.Icon]</texture>
					<bordersize>2</bordersize>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(502)</visible>
			<control type="image">
				<visible>!IsEmpty(ListItem.Overlay)</visible>
				<posx>66</posx>
				<posy>480</posy>
				<width>24</width>
				<height>24</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[ListItem.Overlay]</texture>
			</control>
			<control type="image">
				<description>Trailer image</description>
				<visible>!IsEmpty($INFO[ListItem.Trailer])</visible>
				<posx>64</posx>
				<posy>510</posy>
				<width>30</width>
				<height>30</height>
				<aspectratio>keep</aspectratio>
				<texture>icons/icon-trailer.png</texture>
			</control>
			<control type="label">
				<posx>100</posx>
				<posy>470</posy>
				<width>920</width>
				<font>Large</font>
				<label>$INFO[ListItem.Label]</label>
			</control>
			<control type="label">
				<visible>Container.Content(Movies)</visible>
				<posx>100r</posx>
				<posy>470</posy>
				<width>160</width>
				<font>Medium</font>
				<align>right</align>
				<label>$INFO[ListItem.Year]</label>
			</control>
			<control type="label">
				<visible>Container.Content(TvShows) | Container.Content(Seasons)</visible>
				<posx>100r</posx>
				<posy>470</posy>
				<width>160</width>
				<font>Medium</font>
				<align>right</align>
				<label>$INFO[ListItem.Premiered]</label>
			</control>
			<control type="label">
				<visible>Window.IsVisible(Programs)</visible>
				<posx>100r</posx>
				<posy>470</posy>
				<width>160</width>
				<font>Medium</font>
				<align>right</align>
				<label>$INFO[ListItem.Label2]</label>
			</control>
			<control type="label">
				<posx>100</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<label>$INFO[ListItem.Genre]</label>
			</control>
			<control type="label">
				<visible>Container.Content(Movies)</visible>
				<posx>100r</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<align>right</align>
				<label>$INFO[ListItem.Duration,, $LOCALIZE[12391]]</label>
				<visible>!IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min)</visible>
			</control>
			<control type="label">
				<visible>Container.Content(Movies)</visible>
				<posx>100r</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<align>right</align>
				<label>$INFO[ListItem.Duration]</label>
				<visible>!IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min)</visible>
			</control>
			<control type="label">
				<visible>Container.Content(TvShows) | Container.Content(Seasons)</visible>
				<posx>100r</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<align>right</align>
				<label>$INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102] - ]$INFO[ListItem.Property(UnWatchedEpisodes),, $LOCALIZE[16101]]</label>
			</control>	
			<control type="textbox">
				<description>Description Value Movies/TVShows</description>
				<visible>!Container.Content(Seasons) + !Skin.HasSetting(NoPlot)</visible>
				<posx>100</posx>
				<posy>540</posy>
				<width>1080</width>
				<height>110</height>
				<align>justify</align>
				<label>$INFO[ListItem.Plot]</label>
			</control>
			<control type="textbox">
				<description>Description Value Seasons</description>
				<visible>Container.Content(Seasons) + !Skin.HasSetting(NoPlot)</visible>
				<posx>100</posx>
				<posy>540</posy>
				<width>1080</width>
				<height>110</height>
				<align>justify</align>
				<label>$INFO[Container.ShowPlot]</label>
			</control>
		</control>
		<control type="scrollbar" id="62">
			<posx>200</posx>
			<posy>450</posy>
			<height>25</height>
			<width>880</width>
			<onup>502</onup>
			<ondown>9000</ondown>
			<texturesliderbackground border="14,0,14,0">other_textures/ScrollBarH.png</texturesliderbackground>
			<texturesliderbar border="14,0,14,0">other_textures/ScrollBarH_bar.png</texturesliderbar>
			<texturesliderbarfocus border="14,0,14,0">other_textures/ScrollBarH_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>other_textures/ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>other_textures/ScrollBarNib.png</textureslidernibfocus>
			<orientation>horizontal</orientation>
			<visible allowhiddenfocus="true">Control.IsVisible(502) + [Control.HasFocus(62) | Container.Scrolling]</visible>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(62) | Container.Scrolling">Conditional</animation>
		</control>
	</include>
</includes>