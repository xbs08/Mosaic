<includes>
	<include name="View_505_FanartThumb">
		<description>Fanart Thumb View (id=505)</description>
		<control type="panel" id="505">
			<visible>Container.Content(Movies) | Container.Content(TVShows)</visible>
			<posx>2</posx>
			<posy>140</posy>
			<width>552</width>
			<height>316</height>
			<onleft>505</onleft>
			<onright>505</onright>
			<onup>9000</onup>
			<ondown>65</ondown>
			<pagecontrol>65</pagecontrol>
			<scrolltime>200</scrolltime>
			<focusposition>-</focusposition>
			<orientation>horizontal</orientation>
			<preloaditems>2</preloaditems>
			<viewtype label="$LOCALIZE[20445] $LOCALIZE[31200]">list</viewtype>
			<itemlayout width="110" height="158">
				<control type="image">
					<posx>2</posx>
					<posy>0</posy>
					<width>106</width>
					<height>154</height>
					<texture border="5">other_textures/ButtonNF.png</texture>
				</control>
				<control type="image">
					<posx>7</posx>
					<posy>5</posy>
					<width>96</width>
					<height>144</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="DefaultAddonNone.png" background="true">$INFO[ListItem.Icon]</texture>
					<bordersize>2</bordersize>
				</control>
			</itemlayout>
			<focusedlayout width="110" height="158">
				<control type="image">
					<posx>2</posx>
					<posy>0</posy>
					<width>106</width>
					<height>154</height>
					<texture border="5">other_textures/ButtonFo.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(505)">Conditional</animation>
				</control>
				<control type="image">
					<posx>7</posx>
					<posy>5</posy>
					<width>96</width>
					<height>144</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="DefaultAddonNone.png" background="true">$INFO[ListItem.Icon]</texture>
					<bordersize>2</bordersize>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<description>Fanart Image</description>
			<visible>Control.IsVisible(505)</visible>
			<control type="image">
				<posx>554</posx>
				<posy>140</posy>
				<width>722</width>
				<height>312</height>
				<texture border="4">other_textures/ButtonNF.png</texture>
			</control>
			<control type="image">
				<posx>559</posx>
				<posy>145</posy>
				<width>712</width>
				<height>302</height>
				<aspectratio align="center" aligny="top">scale</aspectratio>
				<texture fallback="fanart_fallback_video_small.png" background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<bordersize>2</bordersize>
				<fadetime>200</fadetime>
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(505)</visible>
			<control type="image">
				<visible>!IsEmpty(ListItem.Overlay)</visible>
				<posx>66</posx>
				<posy>480</posy>
				<width>24</width>
				<height>24</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[ListItem.Overlay]</texture>
			</control>
			<control type="label">
				<posx>100</posx>
				<posy>470</posy>
				<width>920</width>
				<font>Large</font>
				<label>$INFO[ListItem.Label]</label>
			</control>
			<control type="label">
				<visible>Container.Content(Movies)</visible>
				<posx>100r</posx>
				<posy>470</posy>
				<width>160</width>
				<font>Medium</font>
				<align>right</align>
				<label>$INFO[ListItem.Year]</label>
			</control>
			<control type="label">
				<visible>Container.Content(TvShows)</visible>
				<posx>100r</posx>
				<posy>470</posy>
				<width>160</width>
				<font>Medium</font>
				<align>right</align>
				<label>$INFO[ListItem.Premiered]</label>
			</control>
			<control type="label">
				<posx>100</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<label>$INFO[ListItem.Genre]</label>
			</control>
			<control type="label">
				<visible>Container.Content(Movies)</visible>
				<posx>100r</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<align>right</align>
				<label>$INFO[ListItem.Duration,, $LOCALIZE[12391]]</label>
				<visible>!IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min)</visible>
			</control>
			<control type="label">
				<visible>Container.Content(Movies)</visible>
				<posx>100r</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<align>right</align>
				<label>$INFO[ListItem.Duration]</label>
				<visible>!IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min)</visible>
			</control>
			<control type="label">
				<visible>Container.Content(TvShows)</visible>
				<posx>100r</posx>
				<posy>500</posy>
				<width>540</width>
				<font>Small</font>
				<align>right</align>
				<label>$INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102] - ]$INFO[ListItem.Property(UnWatchedEpisodes),, $LOCALIZE[16101]]</label>
			</control>
			<control type="textbox">
				<description>Description Value Movies/TVShows</description>
				<visible>!Container.Content(Seasons) + !Skin.HasSetting(NoPlot)</visible>
				<posx>100</posx>
				<posy>540</posy>
				<width>1080</width>
				<height>110</height>
				<align>justify</align>
				<label>$INFO[ListItem.Plot]</label>
			</control>
		</control>
		<control type="scrollbar" id="65">
			<posx>200</posx>
			<posy>450</posy>
			<height>25</height>
			<width>880</width>
			<onup>505</onup>
			<ondown>9000</ondown>
			<texturesliderbackground border="14,0,14,0">other_textures/ScrollBarH.png</texturesliderbackground>
			<texturesliderbar border="14,0,14,0">other_textures/ScrollBarH_bar.png</texturesliderbar>
			<texturesliderbarfocus border="14,0,14,0">other_textures/ScrollBarH_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>other_textures/ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>other_textures/ScrollBarNib.png</textureslidernibfocus>
			<orientation>horizontal</orientation>
			<visible allowhiddenfocus="true">Control.IsVisible(505) + [Control.HasFocus(65) | Container.Scrolling]</visible>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(65) | Container.Scrolling">Conditional</animation>
		</control>
	</include>
</includes>