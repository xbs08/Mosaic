<window id="2904">
	<defaultcontrol>-</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
			<control type="group">
				<visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration)</visible>
				<control type="label">
					<description>Now Playing Info</description>
					<posx>10</posx>
					<posy>0</posy>
					<width>420</width>
					<height>50</height>
					<font>Small</font>
					<aligny>center</aligny>
					<label>[COLOR=orange]$LOCALIZE[13350][/COLOR][CR]$INFO[VideoPlayer.TVShowTitle,, - ]$INFO[VideoPlayer.Title]</label>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
				</control>
			</control>
		</control>
		<include>Debug_Grid</include>
	</controls>
</window>