<includes>
	<include name="View_50_List">
		<description>List View (id=50)</description>
		<control type="list" id="50">
			<posx>40</posx>
			<posy>140</posy>
			<width>800</width>
			<height>460</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<pagecontrol>60</pagecontrol>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="50" time="200" />
			</animation>
			<itemlayout width="800" height="46">
				<control type="image">
					<width>800</width>
					<height>44</height>
					<texture border="2">other_textures/ButtonNF.png</texture>
				</control>
				<control type="label">
					<posx>20</posx>
					<width>633</width>
					<font>Medium</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<posx>710</posx>
					<posy>0</posy>
					<width>100</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Premiered]</label>
					<visible>Container.Content(TVShows) | Container.Content(Episodes)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>100</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Year]</label>
					<visible>Container.Content(Movies)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>160</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Artist]</label>
					<visible>Container.Content(Albums)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>160</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Property(Artist_Genre)]</label>
					<scroll>true</scroll>
					<visible>Container.Content(Artists)</visible>
				</control>
				<control type="image">
					<posx>668</posx>
					<posy>25</posy>
					<width>90</width>
					<height>18</height>
					<aspectratio>stretch</aspectratio>
					<texture fallback="other_textures/LeftRating/rating0.png">$INFO[ListItem.StarRating,other_textures/LeftRating/]</texture>
					<visible>!IsEmpty(ListItem.Path)</visible>
				</control>
				<control type="image">
					<posx>763</posx>
					<posy>11</posy>
					<width>30</width>
					<height>23</height>
					<texture>$INFO[ListItem.Overlay]</texture>
				</control>
			</itemlayout>
			<focusedlayout width="800" height="46">
				<control type="image">
					<width>800</width>
					<height>44</height>
					<texture border="5">other_textures/ButtonFo.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
				</control>
				<control type="label">
					<posx>20</posx>
					<width>633</width>
					<font>Medium</font>
					<label>$INFO[ListItem.Label]</label>
				</control>	
				<control type="label">
					<posx>710</posx>
					<posy>0</posy>
					<width>100</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Premiered]</label>
					<visible>Container.Content(Episodes)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>160</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Artist]</label>
					<visible>Container.Content(Albums)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>160</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Property(Artist_Genre)]</label>
					<scroll>true</scroll>
					<visible>Container.Content(Artists)</visible>
				</control>
				<control type="label">
					<posx>710</posx>
					<posy>0</posy>
					<width>100</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Property(TotalEpisodes),, $LOCALIZE[20360]]</label>
					<visible>!IsEmpty(ListItem.Property(TotalEpisodes))</visible>
					<visible>Container.Content(TVShows)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>100</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Duration,, $LOCALIZE[12391]]</label>
					<visible>!IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min)</visible>
					<visible>Container.Content(Movies)</visible>
				</control>
				<control type="label">
					<posx>713</posx>
					<posy>0</posy>
					<width>100</width>
					<height>30</height>
					<font>Small</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Duration]</label>
					<visible>!IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min)</visible>
					<visible>Container.Content(Movies)</visible>
				</control>
				<control type="image">
					<posx>668</posx>
					<posy>25</posy>
					<width>90</width>
					<height>18</height>
					<aspectratio>stretch</aspectratio>
					<texture fallback="other_textures/LeftRating/rating0.png">$INFO[ListItem.StarRating,other_textures/LeftRating/]</texture>
					<visible>!IsEmpty(ListItem.Path)</visible>
				</control>
				<control type="image">
					<posx>763</posx>
					<posy>11</posy>
					<width>30</width>
					<height>23</height>
					<texture>$INFO[ListItem.Overlay]</texture>
				</control>
			</focusedlayout>
		</control>
		<control type="image">
			<posx>920</posx>
			<posy>150</posy>
			<width>320</width>
			<height>440</height>
			<fadetime>200</fadetime>
			<aspectratio align="left" aligny="center">keep</aspectratio>
			<texture fallback="DefaultAddonNone.png" background="true">$INFO[ListItem.Icon]</texture>
			<bordertexture border="5">other_textures/ButtonFo.png</bordertexture>
			<bordersize>8</bordersize>
			<visible>!IsEmpty(ListItem.Icon) + Control.IsVisible(50)</visible>
		</control>
		<control type="scrollbar" id="60">
			<posx>840</posx>
			<posy>140</posy>
			<height>460</height>
			<onleft>50</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">Control.IsVisible(50) + [Control.HasFocus(60) | Container.Scrolling]</visible>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling">Conditional</animation>
		</control>
	</include>
</includes>