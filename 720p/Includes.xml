<includes>
	<include file="Defaults.xml" />
	<include file="View_50_List.xml" />
	<include file="View_501_LowList.xml" />
	<include file="View_502_Poster.xml" />
	<include file="View_503_FanartPoster.xml" />
	<include file="View_504_Thumb.xml" />
	<include file="View_505_FanartThumb.xml" />
	<include file="View_506_Banner.xml" />
	<include file="View_508_Cover.xml" />
	<include file="View_509_Icon.xml" />
	<include name="HiddenButton">
		<posx>-20</posx>
		<posy>-20</posy>
		<width>1</width>
		<height>1</height>
		<label>-</label>
		<texturenofocus>-</texturenofocus>
		<texturefocus>-</texturefocus>
	</include>
	<include name="DialogID">
		<posx>10</posx>
		<posy>10</posy>
		<width>520</width>
		<height>14</height>
		<textcolor>red</textcolor>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
		<visible>!System.Platform.Xbox</visible>
	</include>
	<include name="WindowID">
		<posx>10</posx>
		<posy>10</posy>
		<width>520</width>
		<height>14</height>
		<textcolor>blue</textcolor>
		<shadowcolor>black</shadowcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
		<visible>!System.Platform.Xbox</visible>
	</include>
	<include name="Dimensions_Fullscreen">
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
	</include>
	<include name="Debug_Grid">
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture>debuggrid720.png</texture>
			<visible>Skin.HasSetting(DebugGrid)</visible>
		</control>
	</include>
	<include name="GlobalOverlay">
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture>other_textures/black-back.png</texture>
			<animation effect="fade" start="0" end="100" time="100">Visible</animation>
			<animation effect="slide" start="100" end="0" time="100">Hidden</animation>
		</control>
	</include>
	<include name="GlobalBackground">
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture background="true" fallback="special://skin/backgrounds/default.jpg">$INFO[Skin.String(Custom_Background)]</texture>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(NoGlobalFanart) + !Player.HasMedia | [Player.HasAudio + Skin.HasSetting(NoBackgroundVisualiser)] | [Player.HasVideo + Skin.HasSetting(NoBackgroundVideo)]</visible>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.foldername) | !Window.IsVisible(musiclibrary)</visible>
			</control>	
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<visible>[!IsEmpty(ListItem.foldername) + Container.Content(Movies)] | !Window.IsVisible(videolibrary)</visible>
			</control>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(TVShows) | [Container.Content(Episodes) + stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[Fanart.Image]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(Seasons) | [Container.Content(Episodes) + !stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>
		</control>
		<control type="group">
			<visible>[Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)] | [Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)]</visible>

			<control type="visualisation">
				<include>Dimensions_Fullscreen</include>
				<visible>Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)</visible>
			</control>

			<control type="videowindow">
				<include>Dimensions_Fullscreen</include>
				<visible>Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)</visible>
			</control>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture border="2">other_textures/black-back.png</texture>
			</control>
		</control>
	</include>
	<include name="time_date">
		<control type="group">
			<control type="label">
				<description>time label</description>
				<posx>0</posx>
				<posy>5</posy>
				<width>1280</width>
				<height>35</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<font>Large</font>
				<label>$INFO[System.Time]</label>
			</control>
			<control type="label">
				<description>date label</description>
				<posx>0</posx>
				<posy>35</posy>
				<width>1280</width>
				<height>35</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<font>Small</font>
				<label>$INFO[System.Date]</label>
			</control>
			<!-- free ram label -->
			<control type="label">
				<description>system resources info label</description>
				<posx>1270</posx>
				<posy>5</posy>
				<width>200</width>
				<height>25</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>Small</font>
				<textcolor>orange</textcolor>
				<label>$INFO[System.FreeMemory,, - ]$INFO[System.CPUUsage]</label>
			</control>
			<!-- delete this -->
		</control>
	</include>
	<include name="PageCountLabel">
		<control type="group">
			<control type="image">
				<description>Footer Background</description>
				<visible>![Skin.HasSetting(NoFlags) + Skin.HasSetting(NoTotals)]</visible>
				<posx>0</posx>
				<posy>685</posy>
				<width>1280</width>
				<height>35</height>
				<texture>other_textures/black-back.png</texture>
			</control>
			<control type="label">
				<description>Page Count Label</description>
				<visible>[Window.IsMedia + !Container.Scrolling] + !Skin.HasSetting(NoTotals)</visible>
				<animation effect="fade" start="0" end="100" delay="500" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="100">Hidden</animation>
				<posx>100r</posx>
				<posy>25r</posy>
				<width>500</width>
				<height>20</height>
				<font>Small</font>
				<textcolor>white</textcolor>
				<scroll>false</scroll>
				<align>right</align>
				<aligny>center</aligny>
				<label>$INFO[Container.NumItems] $LOCALIZE[31027] - $LOCALIZE[31028] $INFO[Container.CurrentPage]/$INFO[Container.NumPages]</label>
			</control>
		</control>
	</include>
	<include name="ScrollOffsetLabel">
		<control type="group">
			<visible>Container.Scrolling + [StringCompare(Container.SortMethod,$LOCALIZE[551]) 
			| StringCompare(Container.SortMethod,$LOCALIZE[561]) | StringCompare(Container.SortMethod,$LOCALIZE[558]) 
			| StringCompare(Container.SortMethod,$LOCALIZE[557]) | StringCompare(Container.SortMethod,$LOCALIZE[556])]</visible>
			<animation effect="slide" start="0,0" end="0,-64" delay="100" time="100">Visible</animation>
			<animation effect="slide" start="0,-64" end="0,0" delay="400" time="100">Hidden</animation>
			<posx>170r</posx>
			<posy>720</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>70</width>
				<height>64</height>
				<texture>white.png</texture>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>70</width>
				<height>64</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.SortLetter]</label>
				<textcolor>black</textcolor>
				<font>Big</font>
			</control>
		</control>
	</include>
	<include name="ViewVisibleEffect">
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="75" end="100" center="auto" easing="out" tween="back" time="300"/>
			<effect type="fade" start="0" end="100" time="300"/>
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="75" center="auto" easing="in" tween="back" time="300"/>
			<effect type="fade" start="100" end="0" time="300" />
		</animation>
	</include>
	<include name="DialogVisibleEffect">
		<animation effect="fade" time="200">WindowOpen</animation>
		<animation effect="fade" time="200">WindowClose</animation>
	</include>
</includes>